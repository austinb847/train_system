<h1>Update <%= @train.name %></h1>

<form action="/trains/<%= @train.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="train_name">Edit Train Name</label>
  <input id="train_name" name="train_name" type="text" class="form-control" value= <%= @train.name %> >
  <button type="submit" class="btn btn-secondary">Update</button>
</form>

<form action="/trains/<%= @train.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-secondary">Delete train</button>
</form>

<button class="btn btn-secondary"><a href="/trains/<%= @train.id %>">Return to Train</a></button>
