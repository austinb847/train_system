<h4>Train Name: <%= @train.name %></h4>

<%# Display Cities Here %>
<h3>Cities</h3>
  <% if @train.cities %>
    <ul>
      <% @train.cities.each do |city| %>
        <li><a href="/trains/<%= @train.id %>/cities/<%= city.id %>"><%= city.name %></a> </li>
      <% end %>
    </ul>
    <% else %>
      <p>This train does not visit any cities currently</p>
    <% end %>

<%# Add a city here %>
<h4>Add a city to this train's schedule</h4>
<form action="/trains/<%= @train.id %>/cities" method="post">
  <div class="form-group">
    <label for="city_name">City name</label>
    <input id="city_name" name="city_name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-secondary">Add City</button>

<%# Edit Train here %>
<button class="btn btn-secondary"><a href="/trains/<%= @train.id %>/edit">Edit Train</a></button>

<button class="btn btn-secondary"><a href="/trains">Return to home page</a></button>